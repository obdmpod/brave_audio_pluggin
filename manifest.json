{
  "manifest_version": 3,
  "name": "Audio Limiter for Brave",
  "version": "1.0",
  "description": "Limits audio output to a set decibel threshold with output control.",
  "permissions": ["tabs", "scripting", "storage"],
  "host_permissions": [
    "https://*.youtube.com/*",
    "https://*.x.com/*",
    "https://*.tiktok.com/*",
    "https://*.instagram.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {

    }
  }
}
